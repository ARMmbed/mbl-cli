{
    "name": "Mbed Linux CLI",
    "environments": [
        "node",
        "chrome"
    ],
    "node": {
        "suites": "dist/_tests/**/*.js"
    },
    "coverage": [
        "dist/**/*.js",
        "!dist/_tests/**"
    ],
    "reporters+": [
        "jsoncoverage",
        "htmlcoverage",
        { "name": "lcov", "options": { "filename": "lcov.info" }},
        { "name": "cobertura", "options": { "filename": "cobertura.xml" }},
        { "name": "junit", "options": { "filename": "junit.xml" }}
    ]
}
